{
  "name": "excalichat",
  "version": "0.1.0",
  "type": "module",
  "description": "Excalidraw sidecar MCP server for text-mode clients",
  "license": "MIT",
  "bin": {
    "excalichat": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --noEmit && tsc -p tsconfig.server.json && bun build src/main.ts --outfile dist/index.js --target node --banner \"#!/usr/bin/env node\"",
    "dev": "bun --watch src/main.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "zod": "^4.0.0",
    "@upstash/redis": "^1.34.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.9.3"
  }
}
